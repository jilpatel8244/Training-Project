<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>single-post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</head>

<body class="">
    <div class="container d-flex justify-content-center" style="padding-top: 50px;">
        <div class="card bg-light mb-3" style="max-width: 50rem;" id="post"></div>
    </div>
    <hr>
    <div class="container d-flex justify-content-center">
        <div id="comments"></div>
    </div>

    <script>
        let show_comments = 1;


        const fetchSinglePostData = async () => {
            try {
                const data = await fetch(`https://jsonplaceholder.typicode.com/posts/<%= id %>`);
                let jsonData = await data.json();

                if (data.status == 404) {
                    document.getElementById('post').innerHTML = 'data not found';
                } else {
                    //je div m abatava nu che te div -> post
                    let post = document.getElementById("post");

                    //post nu header
                    let div_header = document.createElement("div");
                    div_header.classList.add("card-header");
                    div_header.innerHTML = "Post Id : " + jsonData.id;
                    post.appendChild(div_header);

                    //post ni body
                    let div_card_body = document.createElement("div");
                    div_card_body.classList.add("card-body");

                    //body ma title and text
                    let h5_title = document.createElement("h5");
                    h5_title.classList.add("card-title")
                    h5_title.innerHTML = jsonData.title;
                    let p_body = document.createElement("p");
                    p_body.classList.add("card-text")
                    p_body.innerHTML = jsonData.body;

                    div_card_body.appendChild(h5_title);
                    div_card_body.appendChild(p_body);

                    //body ma j btn comment valu
                    let comment_btn = document.createElement("button");
                    comment_btn.innerHTML = "Show Comments";
                    comment_btn.classList.add("btn", "btn-warning");
                    comment_btn.id = "comment_btn"
                    comment_btn.addEventListener("click", comment_btn_handler);

                    div_card_body.appendChild(comment_btn);


                    // chhelle body ne append karyu post ma
                    post.appendChild(div_card_body);

                }
            } catch (error) {
                console.error(error);
            }
        }
        fetchSinglePostData();

        async function comment_btn_handler() {
            try {
                if (show_comments == 1) {
                    const data = await fetch("https://jsonplaceholder.typicode.com/posts/<%= id %>/comments");
                    let jsonData = await data.json();

                    if (data.status == 404) {
                        document.getElementById('comments').innerHTML = 'data not found';
                    } else {
                        let comments = document.getElementById("comments");

                        jsonData.forEach(single_comment => {

                            // card banayu
                            let singleCommentCard = document.createElement("div");
                            singleCommentCard.classList.add("card", "bg-light", "mb-3");
                            singleCommentCard.style.maxWidth = "50rem";


                            // comment header
                            let div_header = document.createElement("div");
                            div_header.classList.add("card-header");
                            div_header.innerHTML = "Comment Id : " + single_comment.id;
                            singleCommentCard.appendChild(div_header);


                            // comment card body

                            let div_card_body = document.createElement("div");
                            div_card_body.classList.add("card-body");

                            // body ma title and text

                            let h5_name = document.createElement("h5");
                            h5_name.classList.add("card-title");
                            h5_name.innerHTML = single_comment.name;
                            let p_email = document.createElement("p");
                            p_email.classList.add("card-text");
                            p_email.innerHTML = single_comment.email;
                            let p_body = document.createElement("p");
                            p_body.classList.add("card-text");
                            p_body.innerHTML = single_comment.body;

                            div_card_body.appendChild(h5_name);
                            div_card_body.appendChild(p_email);
                            div_card_body.appendChild(p_body);


                            // chhelle body ne append karyu singleCommentCard ma
                            singleCommentCard.appendChild(div_card_body);

                            comments.appendChild(singleCommentCard);

                        });
                        document.getElementById("comment_btn").innerHTML = "Hide Comments";
                        show_comments = 0;
                    }
                } else {
                    comments.innerHTML = "";
                    document.getElementById("comment_btn").innerHTML = "Show Comments";
                    show_comments = 1;
                }
            } catch (error) {
                console.error(error);
            }
        }
    
    </script>
</body>

</html>